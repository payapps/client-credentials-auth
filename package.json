{
  "name": "@payapps/client-credentials-auth",
  "version": "0.0.1",
  "description": "OIDC client credentials flow authentication",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:payapps/client-credentials-auth.git"
  },
  "homepage": "https://github.com/payapps/client-credentials-auth#readme",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "coverage": "jest --coverage && start coverage/lcov-report/index.html",
    "lint": "eslint .",
    "prettier:check": "prettier --check src/**/*.ts test/**/*.ts",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "openid-client": "^5.4.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "axios": "^1.4.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "cobertura",
      "lcov"
    ],
    "testEnvironment": "node"
  }
}
